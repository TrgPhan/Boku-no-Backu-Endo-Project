    <link rel="stylesheet" href="styles.css">
    <style>
        .profile-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .profile-section {
            margin: 2rem 0;
            padding: 1rem;
            border: 1px solid #eee;
            border-radius: 8px;
        }

        .skill-badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            margin: 0.25rem;
            background: #f0f0f0;
            border-radius: 20px;
            font-size: 0.9em;
        }
    </style>
</head>

<body>
    <%- include('includes/general_header') %>

        <main class="container">

            <article class="profile-header">
                <h2>
                    <% if (user.fullname) { %>
                        <%= user.fullname %>
                            <% } else { %>
                                <%= user.email %>
                                    <% } %>
                </h2>

                <div class="contact-info">
                    <% if (user.phone) { %>
                        <p>üì± <%= user.phone %>
                        </p>
                        <% } %>

                            <% if (user.address) { %>
                                <p>üìç <%= user.address %>
                                </p>
                                <% } %>
                </div>
            </article>

            <% if (user.bio && user.bio !=='Ch∆∞a c√≥ gi·ªõi thi·ªáu' ) { %>
                <section class="profile-section">
                    <h3>Gi·ªõi thi·ªáu</h3>
                    <p>
                        <%= user.bio %>
                    </p>
                </section>
                <% } %>

                    <% if (user.skills && JSON.parse(user.skills).length> 0) { %>
                        <section class="profile-section">
                            <h3>K·ªπ nƒÉng</h3>
                            <div>
                                <% JSON.parse(user.skills).forEach(skill=> { %>
                                    <span class="skill-badge">
                                        <%= skill %>
                                    </span>
                                    <% }); %>
                            </div>
                        </section>
                        <% } %>

                            <% if (user.education && Object.keys(JSON.parse(user.education)).length> 0) { %>
                                <section class="profile-section">
                                    <h3>H·ªçc v·∫•n</h3>
                                    <% const education=JSON.parse(user.education); %>
                                        <p><strong>
                                                <%= education.degree %>
                                            </strong></p>
                                        <p>
                                            <%= education.university %>
                                        </p>
                                        <p><em>
                                                <%= education.duration %>
                                            </em></p>
                                </section>
                                <% } %>

                                    <% if (user.experience && JSON.parse(user.experience).length> 0) { %>
                                        <section class="profile-section">
                                            <h3>Kinh nghi·ªám</h3>
                                            <% JSON.parse(user.experience).forEach(exp=> { %>
                                                <article style="margin-bottom: 1.5rem;">
                                                    <h4>
                                                        <%= exp.position %>
                                                    </h4>
                                                    <p>
                                                        <%= exp.company %>
                                                    </p>
                                                    <p><em>
                                                            <%= exp.duration %>
                                                        </em></p>
                                                    <% if (exp.responsibilities && exp.responsibilities.length> 0) { %>
                                                        <ul>
                                                            <% exp.responsibilities.forEach(point=> { %>
                                                                <li>
                                                                    <%= point %>
                                                                </li>
                                                                <% }); %>
                                                        </ul>
                                                        <% } %>
                                                </article>
                                                <% }); %>
                                        </section>
                                        <% } %>
                                            <section class="profile-actions">
                                                <a href="/profile/edit" class="button">‚úèÔ∏è Ch·ªânh s·ª≠a h·ªì s∆°</a>
                                            </section>
        </main>

        <%- include('includes/general_footer') %>
</body>

</html>